# Production Environment Variables
# Copy this file to .env and fill in the values

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
POSTGRES_DB=downloader

# Redis
REDIS_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD

# Auth
NEXTAUTH_URL=https://downloader.mikeng.io
NEXTAUTH_SECRET=GENERATE_WITH_openssl_rand_base64_32

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM="Downloader <noreply@nortrix.io>"

# MinIO
MINIO_ACCESS_KEY=CHANGE_THIS_TO_A_SECURE_KEY
MINIO_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_SECRET
MINIO_BUCKET=downloads

# yt-dlp
YTDLP_TIMEOUT=3600000
YTDLP_MAX_FILE_SIZE=5368709120
